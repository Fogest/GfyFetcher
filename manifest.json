{
  "manifest_version": 2,
  "name": "GfyFetcher",
  "description": "This extension allows you to right click on gif links and open them as HTML5 video gfys via Gfycat.",
  "version": "0.1.2",
  "background": { 
    "page":"src/bg.html"
    },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "content_security_policy": "default-src 'self'",
  "icons": {
    "16": "assests/icon-bitty.png",
    "48": "assests/icon-small.png",
    "128": "assests/icon-large.png"
  }
}
